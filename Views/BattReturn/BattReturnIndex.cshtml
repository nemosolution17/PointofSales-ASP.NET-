@model Salesapp.Models.BattReturn
@{
    ViewBag.Title = "BattReturnIndex";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container" style="width:40%; margin-top:2%">
    @using (Html.BeginForm("BattReturnSave", "BattReturn", FormMethod.Post))
    {
        <br />
        <br />
        <br />
        @Html.Label("StudentName", "Returning Date:")
        @Html.TextBoxFor(model => model.ReturnDate, new { @type = "date", @class = "form-control" })
        <br />
        @Html.Label("StudentName", "Purchased Date:")
        @Html.TextBoxFor(model => model.PurchaseDate, new { @type = "date", @class = "form-control" })
        <br />
        @Html.DropDownListFor(model => model.Supplier_id, ViewBag.SupplierName as SelectList, "--Select Battery Maker--", new { @class = "form-control"})
        <br/>
        @Html.DropDownListFor(model => model.Height_id, ViewBag.HeightName as SelectList, "--Select Battery Height--", new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(model => model.Size_id, ViewBag.SizeName as SelectList, "--Select Battery Size--", new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(model => model.Terminal_id, ViewBag.TerminalName as SelectList, "--Select Battery Termainal--", new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(model => model.QuantityReturn, new { @class = "form-control", @placeholder = "Quantity Returning", @type = "number" })
        <br/>
        @Html.DropDownListFor(model => model.Cust_id, ViewBag.CustName as SelectList, "--Select Customer--", new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(model => model.Emp_id, ViewBag.EmpName as SelectList, "--Select Employee--", new { @class = "form-control" })
        <br />
        <input type="Submit" value=" Submit" />  <input type="reset" value=" Reset" />
        <br />
        <br />
        <br />
        <br />

    }
</div>

{
@TempData["status"];
}